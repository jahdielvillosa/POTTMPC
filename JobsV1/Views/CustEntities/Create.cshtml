@model JobsV1.Models.CustEntity

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>CustEntity</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CustEntMainId, "CustEntMainId", htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-sm-3">
                @Html.DropDownList("CustEntMainId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CustEntMainId, "", new { @class = "text-danger" })


            </div>


            <div class="col-sm-2" style="float:left">
                @Html.ActionLink("Add New Company", "Create", "CustEntMains", new { id = @ViewBag.Id }, new { @class = "btn btn-default" })

            </div>
        </div>

        <div class="form-group" style="display:none;">
            @Html.LabelFor(model => model.CustomerId, "CustomerId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-sm-3">
                @Html.DropDownList("CustomerId", null, htmlAttributes: new { @class = "form-control", @id = "customerlist" })

                @Html.ValidationMessageFor(model => model.CustomerId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Company List", "Index", "CustEntMains", null, null) |
    @Html.ActionLink("Back to Customer", "Details", "Customers", new { id = ViewBag.Id }, null)

</div>
