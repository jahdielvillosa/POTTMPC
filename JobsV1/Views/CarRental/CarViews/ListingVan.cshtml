
@{
    ViewBag.Title = "Van Listing";
}

<div class="jumbotron">
    <h2>Sedan Listing</h2>
     <p>
         <a href="/ads/">Listing</a> >
         <a href="/ad-category/vans/">Van</a>
     </p>
</div>
<div class="container" >
    <div class="col-lg-8 ads-listing-container">
        <div class="col-sm-12 ads-listing-title-bar">
            <h3>Listing for Van <span class="badge"> 2 </span></h3>
        </div>

        <div class="col-sm-12 ads-listing-item">
            <h3 class="btn btn-success ads-listing-price">PHP 3,000</h3>
            <img src="~/Images/CarRental/CarViews/ToyotaGrandia/Toyota-GL-Grandia.jpg" class="img-thumbnail ads-listing-img" />
            <h4>
                <a href="~/ads/toyota-hiace-gl-grandia/">
                    <b>Toyota HiAce – GL Grandia</b>
                </a>
            </h4>
            <h4 class="label label-default">Toyota GL Grandia</h4>
            <h4 class="label label-default">Van</h4>
            <hr style="margin:7px;" />
            <p>Toyota GL Grandia 2013, Milage: 2000, 10 persons, w/ or w/o driver included. </p>
        </div>

        <div class="col-sm-12 ads-listing-item">
            <h3 class="btn btn-success ads-listing-price">PHP 2,500</h3>
            <img src="~/Images/CarRental/CarViews/VanRental/VanRental.jpg" class="img-thumbnail ads-listing-img" alt="toyota gl grandia" />
            <h4>
                <a href="~/ads/van-rental-davao-city/">
                    <b>Van Rental Davao City</b>
                </a>
            </h4>
            <h4 class="label label-default">MPV</h4>
            <h4 class="label label-default">Toyota Avanza</h4>
            <hr style="margin:7px;" />
            <p>Van for Rent Davao City. Toyota gl grandia. Self drive on Davao City Area. Rental  w/ or w/o driver included. </p>
        </div>


    </div>
    <div class="col-lg-3 ads-listing-side">
        @{Html.RenderPartial("CarViews/TagsViewListing");}

        @{Html.RenderPartial("CarViews/PopularAdsView");}
    </div>
</div>


