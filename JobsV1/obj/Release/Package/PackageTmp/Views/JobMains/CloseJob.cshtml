@model JobsV1.Models.JobMain

@{
    ViewBag.Title = "CloseJob";
}

<h2>Confirm Close Job</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Enter remarks for closing job</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.JobDate)
        @Html.HiddenFor(model => model.CustomerId)
        @Html.HiddenFor(model => model.Description)
        @Html.HiddenFor(model => model.NoOfPax)
        @Html.HiddenFor(model => model.NoOfDays)
        @Html.HiddenFor(model => model.JobRemarks)
        @Html.HiddenFor(model => model.JobStatusId)
        @Html.HiddenFor(model => model.BranchId)
        @Html.HiddenFor(model => model.JobThruId)
        @Html.HiddenFor(model => model.AgreedAmt)

        <div class="form-group">
            @Html.LabelFor(model => model.StatusRemarks, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.StatusRemarks, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.StatusRemarks, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Confirm" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
