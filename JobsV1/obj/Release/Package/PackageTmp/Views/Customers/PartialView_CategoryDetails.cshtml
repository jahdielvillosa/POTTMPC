@model IEnumerable<JobsV1.Models.CustCategory>
    @{
        int customerid = Convert.ToInt32(ViewData["customerId"]);
    }

<script src="~/Scripts/jquery-3.3.1.js"></script>

    <div>
        <dl class="dl-horizontal">
            <dt>
                Category
            </dt>
            <dd></dd>

        @foreach (var item in Model)
        {
            <dt>
                <img src="@Html.DisplayFor(modelItem => item.iconPath)" width="25" height="25" style="margin-right:20px;" />

            </dt>
            <dd>
                @Html.DisplayFor(modelItem => item.Name) - 

                @Html.ActionLink("Remove", "Remove", "CustCats", new { catid = item.Id, custid = customerid }, null)
            </dd>
        }
            <dd>
                <a id="catbtn" href="#" data-toggle="modal" data-target="#categoryModal" style="margin-bottom:10px;">Add Category</a>
                
            </dd>

        </dl>
</div>



<!-- Modal -->
<div class="modal fade" id="categoryModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Category List</h4>
            </div>
            <div class="modal-body" id="modal2-content">
                <div class="list-group" id="categorylist">
                    <a href="@Url.Action("addCategory", "CustCats", new { catid = 1, userid = @customerid })" class="list-group-item"> PRIORITY </a>
                    <a href="@Url.Action("addCategory", "CustCats", new { catid = 2, userid = @customerid })" class="list-group-item"> ACTIVE </a>
                    <a href="@Url.Action("addCategory", "CustCats", new { catid = 3, userid = @customerid })" class="list-group-item"> SUSPENDED </a>
                    <a href="@Url.Action("addCategory", "CustCats", new { catid = 4, userid = @customerid })" class="list-group-item"> BAD ACCOUNT </a>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


