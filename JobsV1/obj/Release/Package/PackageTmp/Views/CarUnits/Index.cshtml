@model IEnumerable<JobsV1.Models.CarUnit>

@{
    ViewBag.Title = "Index";
}

<h2>Vehicle List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remarks)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarCategory.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Remarks)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CarCategory.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |

            @if( item.CarRates.Count()== 0 )
            {
                <span>@Html.ActionLink("+Rates", "CreateRate", new { unitid = (int)item.Id}) |</span>
            } else
            {
                <span>
                    @Html.ActionLink(" Rates", "Rates", new { id = (int)item.CarRates.FirstOrDefault().Id }) |
                </span>
            }
            
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
