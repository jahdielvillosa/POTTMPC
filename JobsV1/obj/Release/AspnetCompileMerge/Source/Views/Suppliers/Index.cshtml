@model IEnumerable<JobsV1.Models.Supplier>

@{
    ViewBag.Title = "Index";
}

<h2>Suppliers</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Supplier Info
        </th>
        <th></th>
    </tr>
@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <tr>
            <td style="white-space:nowrap">
                <span style="font-weight:800"> @Html.DisplayFor(modelItem => item.Name) </span> /
                @Html.DisplayFor(modelItem => item.City.Name)
                <p>
                    <img src="~/Images/Phone001.png" width="20" />
                    <a href="tel:@item.Contact1">@Html.DisplayFor(modelItem => item.Contact1)</a>
                    &nbsp; <a href="tel:@item.Contact2">@Html.DisplayFor(modelItem => item.Contact2)</a>
                    &nbsp; <a href="tel:@item.Contact3">@Html.DisplayFor(modelItem => item.Contact3)</a>
                </p>
                <p>
                    <img src="~/Images/Envelop001.png" width="20" />
                    <a href="mailto:@item.Email">@Html.DisplayFor(modelItem => item.Email)</a>
                </p>
                <p>
                    @Html.DisplayFor(modelItem => item.Details)
                </p>
                <p>
                    <b>Status:</b>  @Html.DisplayFor(modelItem => item.Status)
                </p>
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                <br />
                @Html.ActionLink("Items", "Index", "SupplierItems")
                <br />
                @Html.ActionLink("InvItems", "InvItems", "Suppliers", new { id = item.Id },null)

            </td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="7">
            No Supplier Found!
            @Html.ActionLink("Create New >>", "Create") 
        </td>             
    </tr>
}


</table>
