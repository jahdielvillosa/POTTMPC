@model JobsV1.Models.SupplierPoItem

@{
    ViewBag.Title = "ItemCreate";
    int customerid = Convert.ToInt32(ViewData["customerId"]);
}

<h2>Item Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>SupplierPoItem</h4>
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.InvItemId, "InvItemId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("InvItemId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.InvItemId, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
