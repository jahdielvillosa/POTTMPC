@model JobsV1.Models.CarRate

<table class="table">
        <tr>
            <td><span class="userLabel-lg1">Rate</span></td>
            <td>
                <span class="userRemarks">1-6 Days</span>
                <br />
                <span class="userData" id="DailyRate">
                    @Model.Daily.ToString("##,###")
                </span>
                @Html.HiddenFor(model => model.Daily)
            </td>
            <td>
                <span class="userRemarks">7-21 Days</span>
                <br />
                <span class="userData">
                    @Model.Weekly.ToString("##,###")
                </span>
                @Html.HiddenFor(model => model.Weekly)
            </td>
            <td>
                <span class="userRemarks">22 and Above </span>
                <br />
                <span class="userData">
                    @Model.Monthly.ToString("##,###")
                </span>
                @Html.HiddenFor(model => model.Monthly)
            </td>
        </tr>

        <tr>
            <td class="userLabel-lg1">Mileage</td>
            <td colspan="2">
                <span class="userRemarks">Daily Allowance</span>
                <br />
                <span class="userData">
                    @Html.DisplayFor(modelItem => Model.KmFree) Kms
                </span>
                @Html.HiddenFor(model => model.KmFree)
            </td>
            <td>
                <span class="userRemarks">
                    Excess rate
                </span>
                <br />
                <span class="userData">
                    @Model.KmRate.ToString("P##,###") per Km
                </span>
                @Html.HiddenFor(model => model.KmRate)
            </td>
        </tr>
        <tr>
            <td class="userLabel-lg1">Time</td>
            <td colspan="2">
                <span class="userRemarks">
                    Daily Usage
                </span>
                <br />
                <span class="userData">
                    10 hours
                </span>
            </td>
            <td>
                <span class="userRemarks">
                    Overtime rate
                </span>
                <br />
                <span class="userData">
                    @Model.OtRate.ToString("P##,###") per hr
                </span>
                @Html.HiddenFor(model => model.OtRate)
            </td>
        </tr>
</table>
