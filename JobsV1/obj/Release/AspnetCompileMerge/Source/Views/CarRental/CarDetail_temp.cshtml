@model JobsV1.Models.CarUnit

@{

}

<div class="container ">

    <div class="col-sm-12" style="margin: 30px 20px;">

        <div class="col-lg-8">
            <h2>@ViewBag.Title</h2>
        </div>
    </div>

    <div class="col-lg-8">

        <div class="col-lg-12 details-container">
            <img src="~/Images/CarRental/grandiaPrimary.png" class="center-block img-responsive" style="width:60%;margin:auto;" />

            <h3 class="text-info">Summary </h3>
            <p>@ViewBag.Description</p>

        </div>

        <div class="col-lg-12 details-container">
            <h3 class="text-primary">Base Rate</h3>
            <table class="table">
                <tr>
                    <td>1-6 Days</td>
                    <td>0000.00 php</td>
                </tr>
                <tr>
                    <td>7-21 Days</td>
                    <td>0000.00 php</td>
                </tr>
                <tr>
                    <td>22 and Above</td>
                    <td>0000.00 php</td>
                </tr>
            </table>
        </div>

        <div class="col-lg-12 details-container">
            <h3 class="text-primary"> Car Details </h3>
            <table class="table">
                <tr>
                    <td>Vehicle</td>
                    <td>Toyota Gl Grandia</td>
                </tr>
                <tr>
                    <td>Type</td>
                    <td>Van</td>
                </tr>
                <tr>
                    <td>Transmission</td>
                    <td>Manual</td>
                </tr>
                <tr>
                    <td>Year</td>
                    <td>2016</td>
                </tr>
                <tr>
                    <td>Fuel type</td>
                    <td>Diesel</td>
                </tr>
                <tr>
                    <td>Number of Seats</td>
                    <td>4</td>
                </tr>
            </table>

        </div>

        <div class="col-lg-12 details-container">
            <h3 class="text-primary"> Services </h3>
            <button class="btn btn-primary dtls-services"> Self-Drive </button>
            <button class="btn btn-primary dtls-services"> With Driver </button>
            <button class="btn btn-primary dtls-services"> Airport Pickup / Drop-off </button>
            <button class="btn btn-primary dtls-services"> Hotel Pickup / Drop-off </button>
            <button class="btn btn-primary dtls-services"> City Tour </button>
            <button class="btn btn-primary dtls-services"> Out of town tour</button>
        </div>

        <div class="col-lg-12 details-container">
            <h1 class="text-primary">Gallery</h1>
            <img class="img-thumbnail" src="~/Images/CarRental/FortunerPrimary.png" style="width:30%" />
            <img class="img-thumbnail" src="~/Images/CarRental/FortunerPrimary.png" style="width:30%" />
            <img class="img-thumbnail" src="~/Images/CarRental/FortunerPrimary.png" style="width:30%" />
        </div>

        <div class="col-lg-12 details-container">
            <h1 class="text-primary text-center">Book Now! </h1>
            @Html.ActionLink("Cost Estimate and Reservation", "FormRenter", "CarRental", new { id = 1 }, new { @class = "btn btn-primary col-lg-12" })
            <p class="text-info text-center" style="font-size:12px;color:gray;">Note: availability of the vehicle is not guaranteed on the date of reservation. </p>
        </div>
    </div>

    <div class="col-sm-3" style="margin:30px;">
        <a href="@Url.Action("addInvItem", "SupplierPoDtls", null)" class="list-group-item  details-container-list active">  Van (10 seater)   </a>
        <a href="@Url.Action("addInvItem", "SupplierPoDtls", null)" class="list-group-item  details-container-list">  Van (14 seater)   </a>
        <a href="@Url.Action("addInvItem", "SupplierPoDtls", null)" class="list-group-item  details-container-list">  SUV   </a>
        <a href="@Url.Action("addInvItem", "SupplierPoDtls", null)" class="list-group-item  details-container-list">  MPV   </a>
        <a href="@Url.Action("addInvItem", "SupplierPoDtls", null)" class="list-group-item  details-container-list">  Sedan   </a>
        <a href="@Url.Action("addInvItem", "SupplierPoDtls", null)" class="list-group-item  details-container-list">  Pickup   </a>
    </div>


    <div class="col-sm-3" style="margin:30px;">
        <label></label>
    </div>
</div>

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <p>Some text in the modal.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>