@model IEnumerable<JobsV1.Models.CarRateUnitPackage>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<p>
    Sort by: 
        @Html.ActionLink("Unit", "Index", new { sortby = 1 }) |
        @Html.ActionLink("Package", "Index", new { sortby = 2 })
</p>

<table class="table table-striped table-bordered">
    <tr>
        <th>
            Tour Package
        </th>
        <th>
            Daily Rate
        </th>
        <th>
            Weekly Rate
        </th>
        <th>
            Monthly Rate
        </th>
        <th>
           Add-on Rate
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FuelLonghaul)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FuelDaily)
        </th>
        <th>
            Driver Meals
        </th>
        <th>
            Driver Accomodation
        </th>
        <th>
           Unit
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CarRatePackage.Description)
        </td>
        <td>
            @item.CarUnit.CarRates.Where(c=>c.CarUnitId == item.CarUnitId).FirstOrDefault().Daily.ToString("N0")
        </td>
        <td>
            @item.CarUnit.CarRates.Where(c => c.CarUnitId == item.CarUnitId).FirstOrDefault().Weekly.ToString("N0")
        </td>
        <td>
            @item.CarUnit.CarRates.Where(c => c.CarUnitId == item.CarUnitId).FirstOrDefault().Monthly.ToString("N0")
        </td>
        <td>
            @item.DailyRate.ToString("N0")
        </td>
        <td>
            @item.FuelLonghaul.ToString("N0")
        </td>
        <td>
            @item.FuelDaily.ToString("N0")
        </td>
        <td>
            @item.CarRatePackage.DailyMeals
        </td>
        <td>
            @item.CarRatePackage.DailyRoom
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CarUnit.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
