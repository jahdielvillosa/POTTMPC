@model IEnumerable<JobsV1.Areas.Accounting.Models.AsSales>

@{
    ViewBag.Title = "Index";
    decimal dTotal = 0;
}

<h2>Monthly Sales</h2>

<p>
    @Html.ActionLink("Enter New Sales", "Create") |
    @Html.ActionLink("Change Param", "ParamForm")
</p>

<p>

</p>
<table class="table">
    <tr>
        <th>
            TrxID
        </th>
        <th>
            Date
        </th>
        <th>
            Doc Ref
        </th>
        <th>
            Description
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            Entered
        </th>
        <th>
            Section
        </th>
        <th>
            Category
        </th>
        <th>
            Client
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    dTotal += item.Amount;

    <tr>
        <td>
            @item.Id
        </td>
        <td>
            @item.TrxDate.ToString("dd-MMM-yyyy")
        </td>
        <td>
            @item.OrRef
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrxDesc)
        </td>
        <td>
            @item.Amount.ToString("###,###.00")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateEntered)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AsCostCenter.ccName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AsIncCategory.Desc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AsIncClient.ShortName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}


    <tr>
        <td>-
        </td>
        <td>
            -
        </td>
        <td>
            Total
        </td>
        <td>
            @dTotal.ToString("###,###.00")
        </td>
        <td colspan="6">
            </td>
      </tr>

</table>
